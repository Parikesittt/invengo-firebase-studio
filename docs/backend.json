{
  "entities": {
    "Store": {
      "title": "Store",
      "type": "object",
      "description": "Represents a store or warehouse owned by a user.",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string", "description": "The UID of the user who owns this store." },
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "ownerId", "name"]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the inventory.",
      "properties": {
        "id": { "type": "string" },
        "storeId": { "type": "string", "description": "Reference to the Store this product belongs to." },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "sku": { "type": "string" },
        "initialStock": { "type": "number" },
        "currentStock": { "type": "number" },
        "reorderPoint": { "type": "number" },
        "unitPrice": { "type": "number" },
        "category": { "type": "string" }
      },
      "required": ["id", "storeId", "name", "initialStock", "currentStock"]
    },
    "StockUpdate": {
      "title": "StockUpdate",
      "type": "object",
      "description": "Represents a stock update for a product.",
      "properties": {
        "id": { "type": "string" },
        "productId": { "type": "string" },
        "quantity": { "type": "number" },
        "updateDate": { "type": "string", "format": "date-time" },
        "notes": { "type": "string" }
      },
      "required": ["id", "productId", "quantity", "updateDate"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}/stores/{storeId}": {
      "schema": { "$ref": "#/backend/entities/Store" },
      "description": "User stores."
    },
    "/stores/{storeId}/products/{productId}": {
      "schema": { "$ref": "#/backend/entities/Product" },
      "description": "Products within a specific store."
    },
    "/stores/{storeId}/products/{productId}/stockUpdates/{updateId}": {
      "schema": { "$ref": "#/backend/entities/StockUpdate" },
      "description": "Historical stock updates for a product."
    }
  }
}
